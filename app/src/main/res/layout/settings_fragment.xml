                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/om_oss"
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
